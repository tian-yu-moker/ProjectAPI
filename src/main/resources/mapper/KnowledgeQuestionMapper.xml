<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hku.projectapi.Mapper.Knowledge.KnowledgeQuestionMapper">
    <select id="selectByTags" resultMap="com.hku.projectapi.Beans.Knowledge.KnowledgeQuestionBean">
        select * from knowledge_questions where
        <if test="company != null and company != ''">
            comany = #{company}
        </if>
        <if test="type != null and type != ''">
            and type = #{type}
        </if>
    </select>
</mapper>